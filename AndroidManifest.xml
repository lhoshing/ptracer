<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.syssec.ptrace_wrapper"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="21" />
<uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.syssec.ptrace_wrapper.PtraceActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.syssec.ptrace_wrapper.DisplayProcessActivity"
            android:label="@string/title_activity_display_process" >
        </activity>
        <activity
            android:name="com.syssec.ptrace_wrapper.MainActivity"
            android:label="@string/title_activity_ptrace" >
        </activity>
    </application>

</manifest>
